{
  "name": "pfkhra-transport",
  "version": "1.0.0",
  "description": "Transport & Logistics Management System",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "backend": "cd backend && python manage.py runserver",
    "setup": "pip install -r backend/requirements.txt && cd frontend && npm install",
    "init-db": "cd backend && python ../scripts/init_db.py && python manage.py migrate",
    "start": "concurrently \"npm run backend\" \"npm run dev\"",
    "install-all": "npm run setup"
  },
  "keywords": ["transport", "logistics", "django", "react"],
  "author": "PF KHRA Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
