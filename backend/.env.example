# Django
DEBUG=true
FRONTEND_BASE_URL=http://localhost:3000

# Email
# Par défaut, si EMAIL_HOST n'est pas défini, les emails sont envoyés vers la console.
# Pour activer l'envoi SMTP (mot de passe oublié, notifications, etc.), configurez :
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=votre.email@gmail.com
EMAIL_HOST_PASSWORD=VOTRE_MOT_DE_PASSE_APPLICATION

# Expéditeur (optionnel). Si vide, DEFAULT_FROM_EMAIL = EMAIL_HOST_USER
DEFAULT_FROM_EMAIL=Logistique Pro <votre.email@gmail.com>
SERVER_EMAIL=Logistique Pro <votre.email@gmail.com>

